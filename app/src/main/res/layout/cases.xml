<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4sp"
    android:layout_marginVertical="1sp"
    android:backgroundTint="@color/purple_500"
    android:elevation="10sp"
    android:focusable="true"
    app:cardCornerRadius="10sp"
    app:cardElevation="10sp">

    <RelativeLayout
        android:id="@+id/cases_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20sp"
        android:paddingVertical="13dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/case_country_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/ic_fi_rr_flag"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center_vertical"
                android:text="Azerbaijan"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/case_country_population"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/ic_fi_rr_user"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center_vertical"
                android:text="10 389 384"
                android:textAllCaps="true"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cases_new_recovered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/anton"
                android:text="+200"
                android:textColor="#ff00ff00"
                android:textSize="16sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/cases_new_case"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/anton"
                android:text="+200"
                android:textColor="#ffff0000"
                android:textSize="16sp" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>